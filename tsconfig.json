{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src",
  ],
  "allowSyntheticDefaultImports": true,
  "downlevelIteration": true,
}